<% layout("/layouts/boilerplate")%>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">SingUp on Wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="from-label">User Name</label>
                    <input name="username" id="username" placeholder="Naman Shergill" type="text" class="form-control" required/>
                    <div class="valid-feedback">Looks Good!</div>
                </div>



                <div class="mb-3">
                    <label for="email" class="from-label">Email</label>
                    <input name="email" id="email" placeholder="abcd@gmail.com" type="email" class="form-control" required/>
                </div>

                <div class="mb-3">
                    <label for="password" class="from-label">Password</label>
                    <input name="password" id="password" placeholder="********" type="password" class="form-control" required/>
                </div>

                <button class="btn btn-success mb-3">SignUp</button>

            </form>
        </div>
    </div>